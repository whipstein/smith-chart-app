{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "smith-chart-app",
  "version": "0.2.0",
  "identifier": "com.smith-chart-app.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "smith-chart-app",
        "width": 1800,
        "height": 1600,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
